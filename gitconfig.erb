[user]
  name = Comron Sattari
  email = comron@gmail.com

[alias]
  co = checkout
  st = status
  s = status --short
  ci = commit
  br = branch
  df = diff
  dc = diff --cached
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
   
[color]
  diff = auto
  status = auto
  branch = auto

[core]
  excludefile = <%= ENV['HOME'] %>/.gitignore
  excludesfile = <%= ENV['HOME'] %>/.gitignore
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor = <%= `which vim` %>

[apply]
  whitespce = nowarn

[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%cr)%Creset

