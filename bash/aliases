alias ls="ls -G"
alias cjrepl='java -cp clojure.jar clojure.main'
alias cj='java -cp clojure.jar'
alias svndiff='svn diff --diff-cmd diff | mate'
alias mate='open -a TextMate.app'

alias binstall='bundle _0.9.26_ install'
alias migrate='rake db:migrate db:test:clone'

function p { cd $PROJECTS_PATH/$1; }
function w { cd $WORK_PATH/$1; }


alias svnstash="svn diff > .stash; svn revert -R ."
alias svnpop="patch -p0 -i .stash; rm .stash"
