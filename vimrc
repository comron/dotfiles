set hidden

set wildmenu
set wildmode=list:longest

set ignorecase
set smartcase

set number
set ruler

set incsearch
set hlsearch

set wrap
set title

set visualbell
set directory=$HOME/.vim/tmp

set tabstop=2
set shiftwidth=2
set expandtab

set autoindent
set smartindent

